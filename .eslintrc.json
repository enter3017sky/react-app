{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",

        "import",
        "jsx-a11y",
        "react-hooks"

    ],
    "rules": {
        "no-console": "off",

        // 省略 import React ...
        "react/react-in-jsx-scope": "off",
        "react/jsx-one-expression-per-line": "off",
        "react/jsx-filename-extension": [2, {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }]
    }
}
